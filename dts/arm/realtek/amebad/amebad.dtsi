#include <mem.h>
#include <freq.h>
#include <arm/armv8-m.dtsi>

#include <zephyr/dt-bindings/clock/amebad_clock.h>
#include <zephyr/dt-bindings/dma/ameba_dma.h>
#include <zephyr/dt-bindings/adc/adc.h>
#include <zephyr/dt-bindings/i2c/i2c.h>
#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/usb/ameba_usb_ep.h>

/ {
	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu0: cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-m33";
			reg = <0>;
			d-cache-line-size = <32>;
			#address-cells = <1>;
			#size-cells = <1>;
		};
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;

		clk_sys: clk_sys {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <DT_FREQ_M(260)>;
		};

		rcc: rcc@40000000 {
			compatible = "realtek,ameba-rcc";
			#clock-cells = <1>;
			reg = <0x40000000 0x400>;
		};
	};

	soc {
		sram0: memory@10003020 {
			compatible = "mmio-sram";
			reg = <0x10003020 0x00074000>;
		};

		ram_image2_entry: memory@10003000 {
			compatible = "zephyr,memory-region";
			reg = <0x10003000 0x20>;
			zephyr,memory-region = "KM4_IMG2_ENTRY";
		};

		pinctrl: pinctrl@48000400 {
			compatible = "realtek,ameba-pinctrl";
			reg = <0x48000400 0x200>;
		};

		loguart: serial@48012000 {
			compatible = "realtek,ameba-loguart";
			reg = <0x48012000 0x100>;
			clocks = <&rcc AMEBA_LOGUART_CLK>;
			interrupts = <3 0>;
			current-speed = <1500000>;
		};

		uart0: serial@40004000 {
			compatible = "realtek,ameba-uart";
			reg = <0x40004000 0x60>;
			clocks = <&rcc AMEBA_UART0_CLK>;
			interrupts = <34 0>;
			current-speed = <115200>;
			status = "disabled";
		};

		uart3: serial@4800e000 {
			compatible = "realtek,ameba-uart";
			reg = <0x4800e000 0x60>;
			clocks = <&rcc AMEBA_UART3_CLK>;
			interrupts = <9 0>;
			current-speed = <115200>;
			status = "disabled";
		};

		spic: flash-controller@48080000 {
			compatible = "realtek,ameba-flash-controller";
			reg = <0x48080000 0x200>;
			/* interrupts = <51 0>; */

			#address-cells = <1>;
			#size-cells = <1>;

			flash0: flash@E000020 {
				compatible = "soc-nv-flash";
				erase-block-size = <DT_SIZE_K(4)>;
				write-block-size = <4>;
				/* Flash size is specified in board dts */
			};
		};

		dma: dma@4002a000 {
			compatible = "realtek,ameba-gdma";
			reg = <0x4002A000 0x3C0>;
			clocks = <&rcc AMEBA_GDMA0_CLK>;
			interrupts = <41 0>, <42 0>, <43 0>, <44 0>, <45 0>, <46 0>;
			interrupt-names = "CH0", "CH1", "CH2", "CH3", "CH4", "CH5";
			#dma-cells = <3>;
			dma-channels = <6>;
			dma-buf-addr-alignment = <32>;
			dma-buf-size-alignment = <32>;
		};

		adc: adc@4801c800 {
			compatible = "realtek,ameba-adc";
			reg = <0x4801c800 0xB8>;
			clocks = <&rcc AMEBA_ADC_CLK>;
			interrupts = <15 0>;
			channel-count = <7>;
			#io-channel-cells = <1>;
			status = "disabled";
		};

		i2c0: i2c0@4800c000 {
			compatible = "realtek,ameba-i2c";
			reg = <0x4800c000 0x100>;
			interrupts = <6 0>;
			clocks = <&rcc AMEBA_I2C0_CLK>;
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			dmas = <&dma 3 22 0>,
				<&dma 2 21 0>;
			dma-names = "rx", "tx";
			status = "disabled";
		};

		gpioa: gpio@48014000 {
			compatible = "realtek,ameba-gpio";
			reg = <0x48014000 0x400>;
			gpio-controller;
			#gpio-cells = <2>;
			interrupts = <4 0>;
			status = "disabled";
		};

		gpiob: gpio@48014400 {
			compatible = "realtek,ameba-gpio";
			reg = <0x48014400 0x400>;
			gpio-controller;
			#gpio-cells = <2>;
			interrupts = <8 0>;
			status = "disabled";
		};

		spi0: spi@40078000 {
			compatible = "realtek,ameba-spi";
			reg = <0x40078000 0x100>;
			interrupts = <36 0>;
			clocks = <&rcc AMEBA_SPI0_CLK>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "disabled";
		};

		spi1: spi@4000e000 {
			compatible = "realtek,ameba-spi";
			reg = <0x4000e000 0x100>;
			interrupts = <37 0>;
			clocks = <&rcc AMEBA_SPI1_CLK>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "disabled";
		};

		prng: prng@48002000 {
			compatible = "realtek,ameba-trng";
			reg = <0x48002000 0x100>;
			clocks = <&rcc AMEBA_PRNG_CLK>;
			status = "disabled";
		};

		wifi: wifi@40000000 {
			compatible = "realtek,ameba-wifi";
			reg = <0x40000000 0x80000>;
			status = "disabled";
		};

		timer0: counter@40002000 {
			compatible = "realtek,ameba-counter";
			reg = <0x40002000 0x20>;
			clocks = <&rcc AMEBA_LTIM0_CLK>;
			interrupts = <17 0>;
			clock-frequency = <32768>;
			status = "disabled";
		};

		timer1: counter@40002080 {
			compatible = "realtek,ameba-counter";
			reg = <0x40002080 0x20>;
			clocks = <&rcc AMEBA_LTIM1_CLK>;
			interrupts = <18 0>;
			clock-frequency = <32768>;
			status = "disabled";
		};

		timer2: counter@40002100 {
			compatible = "realtek,ameba-counter";
			reg = <0x40002100 0x20>;
			clocks = <&rcc AMEBA_LTIM2_CLK>;
			interrupts = <19 0>;
			clock-frequency = <32768>;
			status = "disabled";
		};

		timer3: counter@40002180 {
			compatible = "realtek,ameba-counter";
			reg = <0x40002180 0x20>;
			clocks = <&rcc AMEBA_LTIM3_CLK>;
			interrupts = <20 0>;
			clock-frequency = <32768>;
			status = "disabled";
		};

		/* The PWM Timer (TIM5) support Input Capture Mode and PWM Mode */
		pwm0: pwm@40002280 {
			compatible = "realtek,ameba-pwm";
			reg = <0x40002280 0x68>;
			interrupts = <22 0>;
			clocks = <&rcc AMEBA_PWM0_CLK>;
			#pwm-cells = <3>;
			status = "disabled";
		};

		wdg: watchdog@40002800 {
			compatible = "realtek,ameba-watchdog";
			reg = <0x40002800 0x4>;
			interrupts = <1 0>;
			early_int_cnt = <500>;
			status = "disabled";
		};

		rtc: rtc@48004000 {
			compatible = "realtek,ameba-rtc";
			reg = <0x48004000 0x30>;
			clocks = <&rcc AMEBA_RTC_CLK>;
			interrupts = <5 0>;
			alarms-count = <1>;
			status = "disabled";
		};

		usb: usb@40140000 {
			compatible = "realtek,ameba-usb";
			reg = <0x40140000 0x20000>;
			interrupts = <68 0>;
			status = "disabled";
		};

		zephyr_udc0: usbd@40150000 {
			compatible = "realtek,ameba-udc";
			reg = <0x40150000 0x200>;
			interrupts = <68 0>;
			in-ep-cnt = <5>;
			out-ep-cnt = <5>;
			udc-max-speed = <AMEBA_USB_BUS_SPEED_FS>;

			/* epnum in/out type mps */
			ep-ranges =
				<AMEBA_USB_EP(1,AMEBA_USB_EP_DIR_IN, AMEBA_USB_EP_TYPE_NON_CTRL,64)>,
				<AMEBA_USB_EP(2,AMEBA_USB_EP_DIR_OUT,AMEBA_USB_EP_TYPE_NON_CTRL,64)>,
				<AMEBA_USB_EP(3,AMEBA_USB_EP_DIR_IN, AMEBA_USB_EP_TYPE_NON_CTRL,64)>,
				<AMEBA_USB_EP(4,AMEBA_USB_EP_DIR_OUT,AMEBA_USB_EP_TYPE_NON_CTRL,64)>;
			status = "disabled";
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <3>;
};
